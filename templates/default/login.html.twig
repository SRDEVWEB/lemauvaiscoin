{% extends 'base.html.twig' %}

{% block title %}Page de login{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            box-shadow: #6f42c1;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

    </style>
    <div class="container">
    <div class="example-wrapper">
        <div class="row">
            <div class="col-12">
                {% if error is not null %}
                    <div class="alert-danger mb-3">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="bg-warning text-black-50 p-4 m-4 rounded-2 shadow">
                <form action="{{ path('app.login') }}" method="post">
                    <input type="hidden"
                           value="{{ csrf_token('authenticate') }}"
                           name="_csrf_token">
                    <div class="form__wrapper">
                        <div class="mb-3">
                            <label for="loginusername" class="form-label">Mon e-mail</label>
                            <input type="email" class="form-control" id="loginusername"
                                    name="_username"
                                   placeholder="name@example.com">
                        </div>
                        <div class="mb-3">
                            <label for="loginpwd" class="form-label">Mon mot de passe</label>
                            <input type="password" class="form-control" name="_password" id="loginpwd">
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Se connecter ðŸ™ˆðŸ™‰ðŸ™Š</button>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}