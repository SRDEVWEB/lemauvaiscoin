{% extends 'base.html.twig' %}
{% block title %}Lister les annonces!{% endblock %}
{% block body %}
<div class="container">
    <div class="row align-items-center">
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 mb-1">
            {% include "default/formRecherche.html.twig" %}
        </div>
        <div class="col-12 col-sm12 col-md-6 col-lg-4 col-xl-3">
            <div class="espacepub text-center shadow w-100"> {% include "/default/publicite.html.twig" %}</div>
        </div>
    </div>
    <div class="rowrecherche w-100 small text-dark p-3 rounded-2 my-1 border border-warning border-2 shadow mb-3">
        {% if annonceQuery.results|length > 0 %}
            il y a <b class="text-white">{{ annonceQuery.count }} annonces</b> dans vos crit√®res.
            <div class="pb-1 d-flex align-items-end justify-content-end">Page en cours : &nbsp;<b
                        class="text-white">{{ annonceQuery.page }}</b>/{{ annonceQuery.totalPages }}</div>
        {% else %}
            il n'y a aucune annonce avec vos crit√®res.
            <div class="pb-1 d-flex align-items-end justify-content-end">Pas de page...</div>
        {% endif %}
    </div>
    <div class="row rounded-4 m-1">
        {% if annonceQuery.results|length <= 0 %}
        <div class="col-12 mb-2 text-center small p-2">
            <h3>Aucune annonce trouv√©e üòî</h3>
        </div>
        {% else %}
        {% for annonce in annonceQuery.results %}
            <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 order-1 order-sm-1 order-md-1 order-lg-1 order-xl-1">
                <a href="{{ path('ads.display.simple', {'id': annonce.id}) }}"
                   class="rowrecherche row rounded-4 m-1 text-decoration-none text-warning p-2 border border-warning border-2 shadow">
                    <div class="row">
                        <div class="col-4">
                            <div class="blobimg imgprod">
                                <div class="br-1 overflow-hidden">
                                    <img class="img-fluid" src="{{ asset('/img/produits/') }}{{ annonce.imageFile }}"
                                         alt="photo du produit!">
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="row h-auto">
                                <div class="catcolor col-12">Cat√©gorie : <span>
                                        <h4 class="text-white">{{ annonce.categorie }}</h4></span></div>
                            </div>
                            <div class="row">
                                <div class="col-12"></div>
                                <span><h3 class="blob4">{{ annonce.produit }}</h3></span></div>
                            <div class="row">
                                <div class="col-12"></div>
                                <span><h1 class="blob5">{{ annonce.prix }}‚Ç¨</h1></span></div>
                        </div>

                    </div>

                <div class="row">
                        <div class="catcolor col-12">
                            <h4 class="mb-4">Description</h4></div>
                        <div class="col-12">
                            <div class="blob2 w-100 text-center d-flex align-items-center justify-content-center"><h5 class="p-4">{{ annonce.description|slice(0, 110) }}</h5></div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="collapsible-accordion">
                            <div class="collapsible-item">
                                <input class="inputa" type="checkbox" id="{{ annonce.id }}.tab20">
                                <label class="collapsible-item-label" for="{{ annonce.id }}.tab20">D√©tails</label>
                                <div class="collapsible-item-content">
                                    <div class="col-12 text-white">Date de d√©p√¥t : &nbsp;<br>
                                        <span><h3>{{ annonce.dateDepot|date("d/m/Y") }}</h3></span></div>
                                    <p class="txtlarger">Caract√©ristiques : </p>
                                    <div class="row">
                                        <div class="textcolor col-6">Couleur :<span>{{ annonce.couleur }}</span></div>
                                        <div class="textcolor col-6">Hauteur :<span>{{ annonce.hauteur }}</span></div>
                                    </div>
                                    <div class="row">
                                        <div class="textcolor col-6">Poids :<span>{{ annonce.poids }}</span></div>
                                        <div class="textcolor col-6">Largeur :<span>{{ annonce.largeur }}</span></div>
                                    </div>
                                    <div class="row">
                                        <div class="textcolor col-6">Dimensions :<span>{{ annonce.dimensions }}</span></div>
                                        <div class="textcolor col-6">Profondeur :<span>{{ annonce.profondeur }}</span></div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <p class="txtlarger">Commentaires du vendeur : </p>
                                    </div>
                                    <div class="blob2 w-100 text-center d-flex align-items-center justify-content-center">
                                        <h6 class="p-4">{{ annonce.commentaires|slice(0, 125) }}</h6>
                                    </div>
                                    <div class="row">
                                        <div class="col-12"><p class="txtlarger mb-0">Le vendeur :&nbsp;</p></div>
                                        <div class="col-12">
                                            <div class="">
                                                <div class="">
                                                    <input class="inputa" type="checkbox" id="{{ annonce.id }}.tab30">
                                                    <label class="lapinette" for="{{ annonce.id }}.tab30"><label
                                                                for="vendeur"> {{ annonce.owner.name }} {{ annonce.owner.firstName }}</label></label>
                                                    <div class="bgcolor">
                                                        <div class="row">
                                                            <div class="textcolor col-12 col-sm-6">
                                                                Ville :&nbsp;<span>{{ annonce.owner.city }}</span></div>
                                                            <div class="textcolor col-12 col-sm-6">
                                                                Code postal :&nbsp;<span>{{ annonce.owner.codePostal }}</span></div>
                                                            <div class="row">
                                                                <div class="col-1 mt-2"></div>
                                                                <div class="bordera col-10 mt-4"></div>
                                                                <div class="col-1 mt-2"></div>
                                                            </div>
                                                        </div>
                                                        <div class="row p-1">
                                                            <div class="col-12"><label for="envoiquestion"><h4>Contacter
                                                                        le vendeur :&nbsp;</h4></label></div>
                                                            <div class="col-12 col-xl-8">
                                                                <form class="m-0" action="alain.php" method="POST">
                                                                    <textarea class="textinputmail w-100 p-2" rows="5" cols="auto"
                                                                              id="envoiquestion"
                                                                              name="envoiquestion"></textarea>
                                                                </form>
                                                            </div>
                                                            <div class="text-center col-12 col-xl-4 d-flex flex-column justify-content-center align-items-center">
                                                                <button class="subbutt" type="submit">
                                                                    <p class="Penvoie m-1">Envoyer</p></button>
                                                                <div class="borderenvoi">0,99‚Ç¨/envoi</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </a>
            </div>
        {% endfor %}

    </div>
    {% endif %}

    {% if annonceQuery.totalPages > 1 %}
        <div class="w-100 d-flex justify-content-center align-item-center mt-3">

            {% for i in range(1, annonceQuery.totalPages) %}
                {% if i <= 1 %}
                    <a href="{{ path('app_annonce') }}?{{ queryParams }}"
                       class="btn btn-sm btn-outline-secondary {% if i == actualPage %}active{% endif %} me-2">1</a>
                {% else %}
                    <a href="{{ path('app_annonce_page', {'page': i}) }}?{{ queryParams }}"
                       class="btn btn-sm btn-outline-secondary {% if i == actualPage %}active{% endif %} me-2">{{ i }}</a>
                {% endif %}
            {% endfor %}
        </div>

    {% endif %}

    {% endblock %}

    {% block javascript_footer %}
        <!-- coucou -->
    {% endblock %}













