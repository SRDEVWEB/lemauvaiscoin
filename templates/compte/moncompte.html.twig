{% extends 'base.html.twig' %}

{% block title %}Visualisation du compte utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 mb-1">
                <h1 class="text-center">Visualisation du compte</h1>
            </div>
            <div class="col-12 col-sm12 col-md-6 col-lg-4 col-xl-3">
                <div class="espacepub text-center shadow w-100"> {% include "/default/publicite.html.twig" %}</div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 order-1 order-sm-1 order-md-1 order-lg-1 order-xl-1">
        </div>
        <div class="br-1 overflow-auto">
            <div class="container-fluid blob w-100 h-auto p-2 shadow">
            <div class="container w-75 align-items-center">
                <div class="form__wrapper p-4">
{#                    <div class="col-11">{{ form(form) }}</div>#}
                    {{ form_start(form) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                    <div class="container">
                        <div class="col-8 bgcolor-secondary catcolor px-1 rounded-top">Informations de contact</div>
                        <div class="border border-warning px-1 bgcolor-secondary">
                        <div class="row">
                            <div class="col">{{ form_row(form.name) }}</div>
                            <div class="col">{{ form_row(form.first_name) }}</div>
                        </div>
                        <div class="row">
                            <div class="col">{{ form_row(form.email) }}</div>
                            <div class="col">{{ form_row(form.tel) }}</div>
                        </div>
                        </div>
                        <br>
                        <div class="col-8 bgcolor-secondary catcolor px-1 rounded-top">Informations de livraison</div>
                        <div class="border border-warning px-1 bgcolor-secondary">
                            <div class="col">{{ form_row(form.adress1) }}</div>
                            <div class="col">{{ form_row(form.adress2) }}</div>
                        <div class="row">
                            <div class="col">{{ form_row(form.code_postal) }}</div>
                            <div class="col">{{ form_row(form.city) }}</div>
                        </div>
                        </div>
                        <br>
                        <div class="col-8 bgcolor-secondary catcolor px-1 rounded-top">Informations de sécurité</div>
                        <div class="border border-warning px-1 bgcolor-secondary">
                        <div class="row">
                            <div class="col">{{ form_row(form.password) }}</div>
                                <div class="col">{{ form_row(form.password2) }}</div>
                            </div>
                    </div>
                    </div>
                    <div class="text-center mt-3">{{ form_end(form) }}</div>
                </div>
            </div>
{#            {{ form(form) }}#}
            </div>  </div>

        <a href="{{ path('app_monpanier') }}">mon panier</a>
    </div>
    {% endblock %}

